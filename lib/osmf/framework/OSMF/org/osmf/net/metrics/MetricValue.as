package org.osmf.net.metrics
{
	/**
	 * MetricValue represents a MetricBase's value.<br />
	 * 
	 *  @langversion 3.0
	 *  @playerversion Flash 10
	 *  @playerversion AIR 1.5
	 *  @productversion OSMF 2.0
	 */
	public class MetricValue
	{
		/**
		 * Constructor.
		 * 
		 * @param value The actual value of the metric.
		 * @param valid Specifies the validity of the actual value.
		 * 
		 *  @langversion 3.0
		 *  @playerversion Flash 10
		 *  @playerversion AIR 1.5
		 *  @productversion OSMF 2.0
		 */
		public function MetricValue(value:*, valid:Boolean = true)
		{
			_value = value;
			_valid = valid;
		}
		
		/**
		 * The actual value of the metric
		 * 
		 *  @langversion 3.0
		 *  @playerversion Flash 10
		 *  @playerversion AIR 1.5
		 *  @productversion OSMF 2.0
		 */
		public function get value():*
		{
			return _value;
		}
		
		/**
		 * The validity of the metric's actual value.
		 * 
		 *  @langversion 3.0
		 *  @playerversion Flash 10
		 *  @playerversion AIR 1.5
		 *  @productversion OSMF 2.0
		 */
		public function get valid():Boolean
		{
			return _valid;
		}
		
		private var _value:*;
		private var _valid:Boolean;
	}
}