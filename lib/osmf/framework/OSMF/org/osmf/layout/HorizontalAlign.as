package org.osmf.layout
{
	/**
	 * Defines an enumeration of horizontal align modes as supported by the
	 * layout renderer.
	 *  
	 *  @langversion 3.0
	 *  @playerversion Flash 10
	 *  @playerversion AIR 1.5
	 *  @productversion OSMF 1.0
	 */
	public final class HorizontalAlign
	{
		/**
		 * Defines the left horizontal align mode.
		 *  
		 *  @langversion 3.0
		 *  @playerversion Flash 10
		 *  @playerversion AIR 1.5
		 *  @productversion OSMF 1.0
		 */
		public static const LEFT:String = "left";
		
		/**
		 * Defines the center horizontal align mode.
		 *  
		 *  @langversion 3.0
		 *  @playerversion Flash 10
		 *  @playerversion AIR 1.5
		 *  @productversion OSMF 1.0
		 */
		public static const CENTER:String = "center";
		
		/**
		 * Defines the right horizontal align mode.
		 *  
		 *  @langversion 3.0
		 *  @playerversion Flash 10
		 *  @playerversion AIR 1.5
		 *  @productversion OSMF 1.0
		 */
		public static const RIGHT:String = "right";
	}
}